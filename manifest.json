{
  "manifest_version": 2,
  "name": "アンケート検索くん",
  "version": "0.1",
  "description": "アンケートを検索します",
  "permissions": ["contextMenus", "tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon16.jpg",
    "name": "アイコンつけてみたかったんや・・・"
  },
  "icons": {
    "16": "img/icon16.jpg",
    "48": "img/icon48.jpg",
    "128": "img/icon128.jpg"
  },
  "content_scripts":[
    {
      "matches" : [ "https://*/*"],
      "js": ["rewrite.js"],
      "run_at" : "document_end"
    }
  ]
}
